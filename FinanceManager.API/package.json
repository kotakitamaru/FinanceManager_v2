{
  "name": "finance-manager-api",
  "version": "1.0.0",
  "description": "Finance Manager API built with Node.js, Express, TypeScript, and TSOA",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only -r ts-node/register -r tsconfig-paths/register src/server.ts",
    "tsoa:gen": "tsoa spec-and-routes",
    "tsoa:build": "npm run tsoa:gen && npm run build",
    "migrate:up": "node dist/database/cli/migrate.js up",
    "migrate:down": "node dist/database/cli/migrate.js down",
    "migrate:down:all": "node dist/database/cli/migrate.js down:all",
    "migrate:pending": "node dist/database/cli/migrate.js pending",
    "migrate:executed": "node dist/database/cli/migrate.js executed",
    "dev:migrate:up": "TS_NODE=true ts-node src/database/cli/migrate.ts up",
    "dev:migrate:down": "TS_NODE=true ts-node src/database/cli/migrate.ts down",
    "dev:migrate:down:all": "TS_NODE=true ts-node src/database/cli/migrate.ts down:all",
    "dev:migrate:status": "TS_NODE=true ts-node src/database/cli/migrate.ts status"
  },
  "keywords": [
    "finance",
    "manager",
    "api",
    "express",
    "typescript",
    "tsoa"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.35.2",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^5.0.0",
    "umzug": "^3.8.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/swagger-ui-express": "^4.1.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
